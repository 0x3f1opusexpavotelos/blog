{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "paths": {
      "@": [
        "src"
      ],
      "*": [
        "node_modules/.pnpm"
      ]
    },
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "test/**/*.ts", "test/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}