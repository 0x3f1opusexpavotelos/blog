{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./content/*"],
      "~/*": ["./*"],
      "@oss/*": ["./oss/*"],
      "*": ["./node_modules/*", "../../node_modules/*"]
    },
    "types": ["vite/client"],
    "typeRoots": [
      "./types",
      "./node_modules",
      "./node_modules/@types",
      "../../node_modules",
      "../../node_modules/@types"
    ]
  },
  "include": ["vite.config.ts", "components/**/*", "composables/**/*"],
  "exclude": ["node_modules", "dist"]
}
