{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    //  Adds feature support for import.meta and export * as ns from "mod" and top-level await
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./docs/*"],
      "/": ["docs"]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playgorund/**"
  ],
  "include": [
    "**/*.ts", 
    "**/*.vue",
    "**/*.d.ts"
  ]
}