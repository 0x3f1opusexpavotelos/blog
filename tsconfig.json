{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    //  Adds feature support for import.meta and export * as ns from "mod" and top-level await
    "module": "ESNext",
    "target": "ES2020",
    // config file upward search
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@oss/*": ["docs/oss/*"],
      "@playground/file-download": ["packages/file-donwload/index.ts"]
    }
  },
  
  "include": [
    "**/*.ts", 
    "**/*.vue",
    "**/*.d.ts"
  ],
  "exclude": [
    "dist/**",
    "node_modules/**",
    "playgorund/**"
  ],
}